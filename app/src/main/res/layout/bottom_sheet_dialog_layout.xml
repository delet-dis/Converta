<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bottomSheetDialogCard"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="96dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="17dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="5dp"
            app:layout_constraintTop_toTopOf="@+id/halfScreenGuideline">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="@string/phraseAddingMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currentMode"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"
                    android:fontFamily="@font/navigo_regular"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/phraseEdit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/currentMode"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.4"
                    android:layout_marginEnd="48dp"
                    android:layout_marginStart="48dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/navigo_regular"
                    android:textSize="17sp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:autofillHints="@string/editTextHint"
                    android:background="@null" />

            <View
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:id="@+id/borderView"
                    app:layout_constraintTop_toBottomOf="@+id/phraseEdit"
                    app:layout_constraintEnd_toEndOf="@+id/phraseEdit"
                    app:layout_constraintStart_toStartOf="@+id/phraseEdit"
                    android:background="@drawable/border_view_rounded_corners"
                    android:layout_marginTop="3dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/halfScreenGuideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>