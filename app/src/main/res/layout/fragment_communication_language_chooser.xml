<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/chooseCommunicationLanguageText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/communicationLanguageChooseHint"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/white"
            android:fontFamily="@font/navigo_medium"
            android:textSize="30sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/goToSynthesizerSettings"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="128dp"
            android:textAlignment="center" />

    <Button
            android:text="@string/chooseCommunicationLanguageButtonText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/goToSynthesizerSettings"
            app:layout_constraintTop_toBottomOf="@+id/communicationLanguageChooseHint"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="16dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/navigo_medium"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:lineSpacingExtra="4sp"
            android:paddingTop="8dp"
            android:paddingBottom="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>